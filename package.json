{
  "name": "brows",
  "description": "An easy to use CLI for consuming text content from any website",
  "version": "1.1.0",
  "bin": {
    "brows": "lib/cli.js"
  },
  "repository": "mk-hill/brows",
  "homepage": "https://github.com/mk-hill/brows",
  "bugs": "https://github.com/mk-hill/brows/issues",
  "author": "Michael Hill <mike@mkh.dev>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "cli",
    "web",
    "content",
    "browser",
    "scraper"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --fix --ignore-path .gitignore",
    "build": "tsc",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "dependencies": {
    "jsdom": "^16.2.2",
    "meow": "^7.0.1",
    "node-fetch": "^2.6.0",
    "puppeteer": "^3.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/jsdom": "^16.2.3",
    "@types/meow": "^5.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/puppeteer": "^3.0.0",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "test/test.ts",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globalTeardown": "<rootDir>/test/teardown.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run lint",
      "pre-push": "npm test && npm run lint"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/lib"
  ]
}
