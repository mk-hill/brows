{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["test", "lib"]
}
